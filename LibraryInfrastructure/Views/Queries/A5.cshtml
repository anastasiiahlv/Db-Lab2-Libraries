@model IEnumerable<LibraryDomain.Model.Library>

@{
    ViewData["Title"] = "A5";
}

<h2>Знайти назву та адресу бібліотеки, у якій >n  книг від ___ автора.</h2>
<div>
    <a asp-action="Index">Повернутись до запитів</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Queries" asp-action="A5" method="post">

            <div class="form-group">
                <label for="AuthorId" class="control-label">Автор</label>
                <select name="AuthorId" class="form-control" asp-items="ViewBag.AuthorId" required>
                    <option value="">Оберіть автора</option>
                </select>
            </div>

            <div class="form-group">
                <label for="MinBooks" class="control-label">Мінімальна кількість книг</label>
                <input type="number" name="MinBooks" class="form-control" min="0" required />
            </div>

            <div class="form-group">
                <p> </p>
                <input type="submit" value="Виконати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />
<h2>Результати</h2>
@if (Model != null && Model.Any())
{
<table class="table">
    <thead>
        <tr>
            <th>Назва бібліотеки</th>
            <th>Адреса бібліотеки</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var library in Model)
            {
                <tr>
                    <td>@library.Name</td>
                    <td>@library.Address</td>
                </tr>
            }
    </tbody>
</table>
}