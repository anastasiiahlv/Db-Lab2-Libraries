@model IEnumerable<LibraryDomain.Model.Library>
@{
    ViewData["Title"] = "B1";
}

<h1>Знайти назви та адреса бібліотек, у яких є всі книги автора ___.</h1>
<div>
    <a asp-action="Index">Повернутись до запитів</a>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Queries" asp-action="B1" method="post">
            <div class="form-group">
                <label for="AuthorId" class="control-label">Автор</label>
                <select name="authorId" asp-items="ViewBag.AuthorId" class="form-control" required>
                    <option value="">Оберіть автора</option>
                </select>
            </div>
            <div class="form-group">
                <p> </p>
                <input type="submit" value="Виконати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Назва</th>
                <th>Адреса</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var library in Model)
            {
                <tr>
                    <td>@library.Name</td>
                    <td>@library.Address</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model == null || !Model.Any())
{
    <p> </p>
}
