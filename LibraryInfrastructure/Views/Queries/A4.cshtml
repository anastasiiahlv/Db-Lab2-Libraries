@model IEnumerable<LibraryDomain.Model.Library>

@{
    ViewData["Title"] = "A4";
}

<h2>Знайти назви та типи бібліотек, директор якої має таку адресу електронної пошти: ___ .</h2>
<div>
    <a asp-action="Index">Повернутись до запитів</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Queries" asp-action="A4" method="get">
            <div class="form-group">
                <label for="DirectorEmail" class="control-label">Електронна пошта директора</label>
                <input type="email" name="directorEmail" class="form-control" required />
            </div>

            <div class="form-group">
                <p> </p>
                <input type="submit" value="Виконати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />
<h2>Результати</h2>
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Назва бібліотеки</th>
                <th>Тип бібліотеки</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var library in Model)
            {
                <tr>
                    <td>@library.Name</td>
                    <td>@library.Type.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
