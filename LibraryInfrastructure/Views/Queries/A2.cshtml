@model IEnumerable<LibraryDomain.Model.Publisher>

@{
    ViewData["Title"] = "A2";
}

<h2>Знайти назви та описи видавництв, книги яких є в ___ бібліотеці.</h2>
<div>
    <a asp-action="Index">Повернутись до запитів</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Queries" asp-action="A2" method="get">
            <div class="form-group">
                <label for="LibraryId" class="control-label">Бібліотека</label>
                <select name="libraryId" class="form-control" asp-items="ViewBag.LibraryId" required>
                    <option value="">Оберіть бібліотеку</option>
                </select>
            </div>

            <div class="form-group">
                <p> </p>
                <input type="submit" value="Виконати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />
<h2>Результат</h2>
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Назва видавництва</th>
                <th>Опис</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var publisher in Model)
            {
                <tr>
                    <td>@publisher.Name</td>
                    <td>@publisher.Info</td>
                </tr>
            }
        </tbody>
    </table>
}

