@model IEnumerable<LibraryDomain.Model.Publisher>

@{
    ViewData["Title"] = "B2";
}

<h1>Визначити назви видавництв, всі книги яких є в бібліотеках з типом ___ і обов'язково ще в інших.</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Queries" asp-action="B2" method="post">
            <div class="form-group">
                <label for="TypeId" class="control-label">Тип бібліотеки</label>
                <select name="typeId" asp-items="ViewBag.TypeId" class="form-control" required>
                    <option value="">Оберіть тип бібліотеки</option>
                </select>
            </div>
            <div class="form-group">
                <p> </p>
                <input type="submit" value="Виконати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Назва видавництва</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var publisher in Model)
            {
                <tr>
                    <td>@publisher.Name</td>
                </tr>
            }
        </tbody>
    </table>
}


