@model IEnumerable<LibraryDomain.Model.Library>

@{
    ViewData["Title"] = "A3";
}

<h2>Знайти назву та адресу бібліотеки, де є книга ___ .</h2>
<div>
    <a asp-action="Index">Повернутись до запитів</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Queries" asp-action="A3" method="get">
            <div class="form-group">
                <label for="BookTitle" class="control-label">Назва книги</label>
                <select name="bookTitle" class="form-control" asp-items="ViewBag.BookTitle" required>
                    <option value="">Оберіть книгу</option>
                </select>
            </div>

            <div class="form-group">
                <p> </p>
                <input type="submit" value="Виконати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />
<h2>Результат</h2>
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Назва бібліотеки</th>
                <th>Адреса бібліотеки</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var library in Model)
            {
                <tr>
                    <td>@library.Name</td>
                    <td>@library.Address</td>
                </tr>
            }
        </tbody>
    </table>
}

